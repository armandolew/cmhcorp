	        <value>com.medem.model.BodySystem</value>
	        <value>com.medem.model.Company</value>
	        <value>com.medem.model.Diagnosis</value>
	        <value>com.medem.model.Employee</value>
	        <value>com.medem.model.MedicalHistory</value>
	        <value>com.medem.model.PhysicalExploration</value>
	        <value>com.medem.model.TypeBodySystem</value>
	        <value>com.medem.model.TypeDiagnosis</value>
	        <value>com.medem.model.User</value>
	      </list>
	    </property>

        <property name="hibernateProperties">
            <props>
                <prop key="hibernate.dialect">org.hibernate.dialect.MySQLDialect
                </prop>
                <prop key="hibernate.show_sql">true</prop>
                <prop key="hibernate.format_sql">true</prop>
				<prop key="hibernate.c3p0.min_size">10</prop>
				<prop key="hibernate.c3p0.max_size">20</prop>
				<prop key="hibernate.c3p0.acquire_increment">1</prop>

	    <property name="dataSource" ref="dataSource" />
	    <property name="annotatedClasses">
	      <list>
	        <value>com.medem.model.Area</value>
	        <value>com.medem.model.ActivityCompany</value>
	        <value>com.medem.model.Address</value>

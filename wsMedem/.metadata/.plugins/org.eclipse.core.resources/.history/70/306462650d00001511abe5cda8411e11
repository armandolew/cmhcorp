        return Assembler.createBodySystemDTO(this.bodySystemDAO.getBodySystemById(id));
    }

    @Override
    @Transactional
    public List<BodySystemDTO> listBodySystems() {
        // TODO Auto-generated method stub
        return null;
    }
    

}
